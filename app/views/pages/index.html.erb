<%= content_for :head do %>
  <script type="text/javascript">

    <% if @initial_data %>
      // Load user datainto store.
      var initialData = <%= @user_data.html_safe %>;
      if (initialData.teams) App.store.loadMany(App.Team, initialData.teams);
      if (initialData.user) App.store.load(App.User, initialData.user);
      if (initialData.bracket) App.store.load(App.Bracket, initialData.bracket);
      if (initialData.games) App.store.loadMany(App.Game, initialData.games);
      if (initialData.user) App.set('currentUser', App.User.find(initialData.user.id));
    <% end %>

    App.set('pageId', '<%= @page_id %>');
    App.set('restaurants', <%= Constants::RESTAURANTS.to_json.to_s.html_safe %>);
    App.set('phase', <%= Constants::PHASE.to_json.to_s.html_safe %>);
    App.set('pageAppUrl', 'https://www.facebook.com/<%= @page_id %>/app_<%= Constants::FB_APP_ID %>');

  </script>
<% end %>